@{
    ViewData["Title"] = "Payment Methods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="text-center">
        <h1>Redirecting...</h1>
        <p>Please wait while we redirect you to the bookings page.</p>
        <div class="spinner-border text-primary mt-3" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Redirect after a short delay to give the impression of processing
        setTimeout(function() {
            window.location.href = '@Url.Action("Index", "Booking", new { area = "Customer" })';
        }, 1000);
    </script>
} 