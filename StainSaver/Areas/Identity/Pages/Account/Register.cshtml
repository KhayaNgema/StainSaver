@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-image-side">
        <div class="overlay"></div>
        <div class="content">
            <h2>Join StainSaver</h2>
            <p>Experience professional laundry services at your doorstep</p>
            <ul class="feature-list">
                <li><i class="fas fa-check-circle"></i> Free pickup and delivery</li>
                <li><i class="fas fa-check-circle"></i> Quick turnaround times</li>
                <li><i class="fas fa-check-circle"></i> Eco-friendly cleaning solutions</li>
            </ul>
        </div>
    </div>
    <div class="auth-form-side register-form">
        <div class="auth-form-container">
            <h1>Create Account</h1>
            <p class="lead mb-4">Register with StainSaver to get started</p>
            
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="John Doe" />
                            <label asp-for="Input.FullName">Full Name</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" aria-required="true" placeholder="0821234567" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.StreetAddress" class="form-control" autocomplete="street-address" aria-required="true" placeholder="123 Main Street" />
                    <label asp-for="Input.StreetAddress">Street Address</label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Suburb" class="form-control" autocomplete="address-level3" aria-required="true" placeholder="Sandton" />
                            <label asp-for="Input.Suburb">Suburb</label>
                            <span asp-validation-for="Input.Suburb" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PostalCode" class="form-control" autocomplete="postal-code" aria-required="true" placeholder="2196" />
                            <label asp-for="Input.PostalCode">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.City" class="form-control" autocomplete="address-level2" aria-required="true" placeholder="Johannesburg" />
                            <label asp-for="Input.City">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Province" class="form-control" autocomplete="address-level1" aria-required="true" placeholder="Gauteng" />
                            <label asp-for="Input.Province">Province</label>
                            <span asp-validation-for="Input.Province" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.IdNumber" class="form-control" autocomplete="off" aria-required="true" placeholder="8001015009087" />
                    <label asp-for="Input.IdNumber">South African ID Number</label>
                    <span asp-validation-for="Input.IdNumber" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-4">
                    <input asp-for="Input.AlternativeContactNumber" class="form-control" autocomplete="tel" placeholder="0821234567" />
                    <label asp-for="Input.AlternativeContactNumber">Alternative Contact Number (Optional)</label>
                    <span asp-validation-for="Input.AlternativeContactNumber" class="text-danger"></span>
                </div>
                
                <div class="d-grid mb-4">
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Create Account</button>
                </div>
                
                <div class="d-flex justify-content-center mb-3">
                    <span>Already have an account? </span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="ms-2 text-decoration-none fw-bold">Sign In</a>
                </div>
                
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <div class="separator">
                            <span>OR</span>
                        </div>
                        
                        <div class="text-center mt-3">
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <i class="fab fa-@(provider.DisplayName.ToLower()) me-2"></i> Register with @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --forest-green: rgb(70, 118, 70);
            --forest-green-light: rgba(70, 118, 70, 0.1);
            --forest-green-medium: rgba(70, 118, 70, 0.3);
            --text-light: #f8f9fa;
            --text-dark: #212529;
        }
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            background-color: #f8f9fa;
        }
        
        .container {
            max-width: 100%;
            padding: 0;
            margin: 0;
            width: 100%;
        }
        
        main {
            padding: 0 !important;
        }
        
        .auth-container {
            display: flex;
            flex-direction: column-reverse;
            min-height: calc(100vh - 60px);
            width: 100%;
        }
        
        .auth-image-side {
            flex: 1;
            background: url('/images/images.jpg') no-repeat center center;
            background-size: cover;
            position: relative;
            color: var(--text-light);
            min-height: 300px;
        }
        
        .auth-image-side .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
        }
        
        .auth-image-side .content {
            position: relative;
            z-index: 2;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
            max-width: 500px;
            margin: 0 auto;
        }
        
        .auth-image-side h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        
        .auth-image-side p {
            font-size: 1.25rem;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
            margin-bottom: 1.5rem;
        }
        
        .feature-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .feature-list li {
            margin-bottom: 0.75rem;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
        }
        
        .feature-list li i {
            color: var(--forest-green);
            background-color: white;
            border-radius: 50%;
            margin-right: 0.75rem;
            font-size: 1rem;
            padding: 0.25rem;
        }
        
        .auth-form-side {
            flex: 2;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background-color: white;
            overflow-y: auto;
        }
        
        .register-form {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }
        
        .auth-form-container {
            width: 100%;
            max-width: 700px;
        }
        
        .auth-form-container h1 {
            color: var(--text-dark);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        
        .btn-primary {
            background-color: var(--forest-green);
            border-color: var(--forest-green);
            padding: 0.75rem 2rem;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .btn-primary:hover {
            background-color: #3c6b3c;
            border-color: #3c6b3c;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }
        
        .separator {
            display: flex;
            align-items: center;
            text-align: center;
            color: #6c757d;
            margin: 1.5rem 0;
        }
        
        .separator::before,
        .separator::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }
        
        .separator span {
            padding: 0 1rem;
        }
        
        a {
            color: var(--forest-green);
            transition: color 0.2s;
        }
        
        a:hover {
            color: #3c6b3c;
        }
        
        @@media (min-width: 992px) {
            .auth-container {
                flex-direction: row;
            }
            
            .auth-image-side {
                min-height: auto;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
