@model StainSaver.Models.Booking
@using StainSaver.Models
@using System.Globalization

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var zaCulture = new CultureInfo("en-ZA");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Booking #@Model.Id</h1>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Tasks
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Booking Date:</strong></p>
                            <p>@Model.BookingDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Pickup Date:</strong></p>
                            <p>@(Model.PickupDate.HasValue ? Model.PickupDate.Value.ToString("MMM dd, yyyy hh:mm tt") : "Not scheduled")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            @if (Model.DeliveryDate.HasValue)
                            {
                                <p class="mb-1"><strong>Delivery Date:</strong></p>
                                <p>@Model.DeliveryDate.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Status:</strong></p>
                            <p><span class="badge bg-@GetStatusBadgeColor(Model.Status)">@Model.Status</span></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <p class="mb-1"><strong>Special Instructions:</strong></p>
                            <p>@(string.IsNullOrEmpty(Model.SpecialInstructions) ? "None" : Model.SpecialInstructions)</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Services</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.BookingDetails)
                                {
                                    <tr>
                                        <td>@detail.LaundryService.Name</td>
                                        <td>@detail.Quantity</td>
                                        <td>@detail.Price.ToString("C", zaCulture)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td colspan="2" class="text-end">Total:</td>
                                    <td>@Model.TotalAmount.ToString("C", zaCulture)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-1"><strong>Name:</strong></p>
                        <p>@Model.Customer.FullName</p>
                    </div>
                    <div class="mb-3">
                        <p class="mb-1"><strong>Phone:</strong></p>
                        <p>@Model.Customer.PhoneNumber</p>
                    </div>
                    <div class="mb-3">
                        <p class="mb-1"><strong>Email:</strong></p>
                        <p>@Model.Customer.Email</p>
                    </div>
                    <div class="mb-3">
                        <p class="mb-1"><strong>Address:</strong></p>
                        <p>@Model.Customer.Address</p>
                    </div>

                    <div class="mt-4">
                        <a href="tel:@Model.Customer.PhoneNumber" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-phone me-2"></i>Call Customer
                        </a>
                        <a href="mailto:@Model.Customer.Email" class="btn btn-outline-primary w-100">
                            <i class="fas fa-envelope me-2"></i>Email Customer
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == BookingStatus.PickupAssigned)
                        {
                            <a asp-action="MarkAsPickedUp" asp-route-id="@Model.Id" class="btn btn-success"
                               onclick="return confirm('Are you sure you want to mark this as picked up?');">
                                <i class="fas fa-check-circle me-2"></i>Mark as Picked Up
                            </a>
                        }
                        else if (Model.Status == BookingStatus.Completed)
                        {
                            <a asp-action="MarkAsDelivered" asp-route-id="@Model.Id" class="btn btn-success"
                               onclick="return confirm('Are you sure you want to mark this as delivered?');">
                                <i class="fas fa-check-circle me-2"></i>Mark as Delivered
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeColor(BookingStatus status)
    {
        return status switch
        {
            BookingStatus.Pending => "secondary",
            BookingStatus.Confirmed => "info",
            BookingStatus.PickupAssigned => "primary",
            BookingStatus.PickedUp => "warning",
            BookingStatus.Processing => "warning",
            BookingStatus.StaffAssigned => "warning",
            BookingStatus.Completed => "success",
            BookingStatus.Delivered => "success",
            BookingStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
} 