@model IEnumerable<StainSaver.Models.Booking>
@using StainSaver.Models
@using System.Globalization

@{
    ViewData["Title"] = "Today's Pickups";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var zaCulture = new CultureInfo("en-ZA");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Today's Pickups</h1>
        <div>
            <a asp-area="Driver" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i> No pickups scheduled for today.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Booking #@booking.Id</h5>
                            <span class="badge bg-light text-dark">@booking.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="mb-1"><strong>Customer:</strong></p>
                                <p>@booking.Customer.FullName</p>
                            </div>
                            <div class="mb-3">
                                <p class="mb-1"><strong>Pickup Time:</strong></p>
                                <p>@(booking.PickupDate.HasValue ? booking.PickupDate.Value.ToString("hh:mm tt") : "Not scheduled")</p>
                            </div>
                            <div class="mb-3">
                                <p class="mb-1"><strong>Address:</strong></p>
                                <p>@booking.Customer.StreetAddress, @booking.Customer.Suburb, @booking.Customer.City</p>
                            </div>
                            <p><strong>Total Amount:</strong> @booking.TotalAmount.ToString("C", zaCulture)</p>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex justify-content-between">
                                <a asp-area="Driver" asp-controller="Tasks" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-info-circle me-1"></i> Details
                                </a>
                                <a asp-area="Driver" asp-controller="Tasks" asp-action="MarkAsPickedUp" asp-route-id="@booking.Id" class="btn btn-success"
                                   onclick="return confirm('Are you sure you want to mark this as picked up?');">
                                    <i class="fas fa-check me-1"></i> Mark as Picked Up
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 