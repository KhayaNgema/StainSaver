@model IEnumerable<StainSaver.Models.BookingDetail>
@{
    ViewData["Title"] = "Completed Orders";
    var zaCulture = new System.Globalization.CultureInfo("en-ZA");
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p>These are the laundry tasks that have been completed by you.</p>

    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h2>Completed Tasks</h2>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Service</th>
                                <th>Customer</th>
                                <th>Completed On</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <div>@item.LaundryService.Name</div>
                                        <small class="text-muted">@item.LaundryService.Description</small>
                                    </td>
                                    <td>
                                        <div>@item.Booking.Customer.FullName</div>
                                        <small class="text-muted">@item.Booking.Customer.Email</small>
                                    </td>
                                    <td>@(item.CompletedOn.HasValue ? item.CompletedOn.Value.ToString("dd/MM/yyyy HH:mm") : "Not recorded")</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("C", zaCulture)</td>
                                    <td><span class="badge bg-warning text-dark">@item.Status</span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle me-1"></i>Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center">
                    <i class="fas fa-check-circle text-muted mb-3" style="font-size: 3rem;"></i>
                    <h5>No Completed Tasks</h5>
                    <p class="text-muted">You haven't completed any laundry tasks yet.</p>
                </div>
            }
        </div>
    </div>
</div> 