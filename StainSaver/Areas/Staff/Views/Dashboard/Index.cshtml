@model StainSaver.Areas.Staff.Models.StaffDashboardViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h1>@Model.Title</h1>
    <p>Welcome to the staff portal of StainSaver.</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.NewOrders</h2>
                    <p class="card-text">New Orders</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Staff" asp-controller="Orders" asp-action="New">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.ProcessingOrders</h2>
                    <p class="card-text">Processing</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Staff" asp-controller="Orders" asp-action="Processing">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.ReadyForDelivery</h2>
                    <p class="card-text">Ready for Delivery</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Staff" asp-controller="Orders" asp-action="ReadyForDelivery">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.TotalAssignedOrders</h2>
                    <p class="card-text">Total Assigned</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Staff" asp-controller="Orders" asp-action="Assigned">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-list-alt me-1"></i>
                    Today's Tasks
                </div>
                <div class="card-body">
                    <p>This section would display tasks for today.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-bell me-1"></i>
                    Notifications
                </div>
                <div class="card-body">
                    <p>This section would display staff notifications.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Additional scripts for the staff dashboard can be added here -->
} 