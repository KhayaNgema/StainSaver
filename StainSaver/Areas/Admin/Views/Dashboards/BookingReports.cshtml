@model List<StainSaver.Models.Booking>
@using System.Globalization
@{
    ViewData["Title"] = "Booking Status Report";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string? fromQuery = Context.Request.Query["from"];
    string? toQuery = Context.Request.Query["to"];

    DateTime? fromDate = null;
    DateTime? toDate = null;

    if (DateTime.TryParseExact(fromQuery, "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out var fd))
    {
        fromDate = fd;
    }
    if (DateTime.TryParseExact(toQuery, "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out var td))
    {
        toDate = td;
    }

    var filteredBookings = Model.AsQueryable();
    if (fromDate.HasValue)
    {
        filteredBookings = filteredBookings.Where(b => b.BookingDate.Date >= fromDate.Value.Date);
    }
    if (toDate.HasValue)
    {
        filteredBookings = filteredBookings.Where(b => b.BookingDate.Date <= toDate.Value.Date);
    }

    var statusCounts = filteredBookings
        .GroupBy(b => b.Status)
        .Select(g => new { Status = g.Key.ToString(), Count = g.Count() })
        .ToList();

    var labels = statusCounts.Select(sc => sc.Status).ToArray();
    var data = statusCounts.Select(sc => sc.Count).ToArray();
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#265828;">
        <div class="d-flex align-items-center">
            <h2 class="mb-0 text-white">Booking Status Report</h2>
        </div>
        <a asp-area="Admin" asp-controller="Dashboards" asp-action="Dashboards" class="btn btn-outline-light">
            <i class="fas fa-arrow-left me-2"></i>Dashboards
        </a>
    </div>
    <form method="get" class="d-flex align-items-end gap-2 mb-1" style="max-width: 480px; flex-wrap: nowrap;">
        <div class="flex-grow-1">
            <label for="fromDate" class="form-label text-dark mb-1">From</label>
            <input type="date" id="fromDate" name="from" value="@(fromDate?.ToString("yyyy-MM-dd") ?? "")" class="form-control" />
        </div>
        <div class="flex-grow-1">
            <label for="toDate" class="form-label text-dark mb-1">To</label>
            <input type="date" id="toDate" name="to" value="@(toDate?.ToString("yyyy-MM-dd") ?? "")" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-success" style="width: auto; min-width: 100px;">Filter</button>
        </div>
    </form>
    <div style="max-width: 480px; margin: auto;">
        <canvas id="bookingStatusChart"></canvas>
    </div>
</div>
@section Styles {
    <style>
        #bookingStatusChart {
            max-width: 100% !important;
            height: auto !important;
        }
    </style>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('bookingStatusChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(labels)),
                datasets: [{
                    label: 'Number of Bookings',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(data)),
                    backgroundColor: [
                        '#48AAAD', '#7BC8C8', '#A6D1D1', '#D1E6E6', '#F0F8F8',
                        '#4A90E2', '#50E3C2', '#B8E986', '#F8E71C'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                aspectRatio: 1,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            font: {
                                size: 12
                            },
                            boxWidth: 12,
                        }
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
}
