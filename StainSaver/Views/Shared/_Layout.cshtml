<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StainSaver</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StainSaver.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* Custom styles for multi-level dropdown */

        .dropdown-submenu {
            position: relative;
        }

        /* Shift submenu down by 5px and align right */
        .dropdown-submenu > .dropdown-menu {
            top: 5px; /* shifted down */
            left: 100%;
            margin-left: 0.1rem;
            margin-right: 0.1rem;
            display: none; /* Hide submenu by default */
        }

        /* Show submenu on hover of parent */
        .dropdown-submenu:hover > .dropdown-menu {
            display: block;
        }

        /* Parent submenu link text green and pointer cursor */
        .dropdown-submenu > a.dropdown-toggle {
            color: green !important;
            cursor: pointer;
        }

        /* Parent submenu link hover/focus color */
        .dropdown-submenu > a.dropdown-toggle:hover,
        .dropdown-submenu > a.dropdown-toggle:focus {
            color: darkgreen !important;
            text-decoration: none;
        }

        /* Change submenu item text color to white on hover */
        .dropdown-menu > li > a.dropdown-item:hover,
        .dropdown-menu > li > a.dropdown-item:focus {
            color: white !important;
            background-color: #0d6efd; /* Bootstrap primary background to highlight */
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StainSaver</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Dashboards" asp-action="Dashboards">Dashboards</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="LaundryServices" asp-action="Index">Laundry Services</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Bookings" asp-action="Index">All Bookings</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Bookings" asp-action="BookingDetailsForStaffAssignment">Staff Assignment</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Reviews" asp-action="Index">Customer Reviews</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Customers">Customers</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Staff">Staff</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Drivers">Drivers</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="complaintsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Complaints
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="complaintsDropdown">
                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item dropdown-toggle" href="#" id="refundsDropdown" role="button" aria-expanded="false">
                                                Refunds
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="refundsDropdown">
                                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Complains" asp-action="RefundComplains">Refunds Requests</a></li>
                                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Complains" asp-action="ProcessedRefunds">Processed Refunds</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item dropdown-toggle" href="#" id="lostFoundDropdown" role="button" aria-expanded="false">
                                                Lost &amp; found
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="lostFoundDropdown">
                                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Complains" asp-action="LostOrFoundComplains">Lost &amp; Found Requests</a></li>
                                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Complains" asp-action="PackagedDeliveries">Packages</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Customer" asp-controller="Dashboard" asp-action="Index">Customer Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Customer" asp-controller="Booking" asp-action="Index">My Bookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" asp-area="Customer" asp-controller="Notifications" asp-action="Index">
                                        Notifications
                                        <span id="notification-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                            <span id="notification-count">0</span>
                                            <span class="visually-hidden">unread messages</span>
                                        </span>
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Staff" asp-controller="Dashboard" asp-action="Index">Staff Dashboard</a>
                                </li>
                            }
                            else if (User.IsInRole("Driver"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Driver" asp-controller="Dashboard" asp-action="Index">Driver Dashboard</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div id="page-content-wrapper" class="main-content" style="width: 100%; margin: 0; padding: 0;">
        <div style="padding-right:10px; padding-left:10px; width: 100%;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
    {
        <script>
            // Fetch unread notification count for customers
            $(document).ready(function () {
                function updateNotificationCount() {
                    $.ajax({
                        url: '@Url.Action("GetUnreadCount", "Notifications", new { area = "Customer" })',
                        type: 'GET',
                        success: function (data) {
                            if (data.unreadCount > 0) {
                                $('#notification-count').text(data.unreadCount);
                                $('#notification-badge').show();
                            } else {
                                $('#notification-badge').hide();
                            }
                        }
                    });
                }

                // Initial load
                updateNotificationCount();

                // Update every 60 seconds
                setInterval(updateNotificationCount, 60000);
            });
        </script>
    }

    <!-- No extra JS needed for hover submenu, pure CSS -->

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
